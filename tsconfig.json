// tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS", // Node.js 라이브러리에 일반적
    "declaration": true, // .d.ts 타입 선언 파일 생성
    "outDir": "./dist", // 컴파일된 JS 파일 출력 디렉터리
    "rootDir": "./src", // TS 소스 파일 루트 디렉터리
    "strict": true, // 모든 엄격한 타입 검사 활성화
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ], // 컴파일 대상
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ] // 제외 대상
}